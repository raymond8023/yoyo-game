/* pages/threedoors/threedoors.wxss */
.main{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.pageTitle{
  font-size: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title{
  margin-top: 10rpx;
  height: 80rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color:#3498db;
  font-size: 40rpx;
  color: #fbfbfb;
  box-shadow: 5rpx 5rpx 10rpx #2c2c2c;
}

.title text{
  color: #e64c3a;
}

.content {
  margin: 40rpx;
}

.option{
  display: flex;
  flex-direction: column;
}

.optionLine{
  margin-top: 20rpx;
}

.footer{
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}