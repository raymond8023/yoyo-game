/* pages/fairgamble/check.wxss */

.test{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.test input{
  width: 200rpx;
  border:1rpx solid #2c2c2c;
}

.test slider{
  width: 500rpx;
}


.option{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.movable-area{
  pointer-events:none;
  z-index: 100;
  width: 100%;
  height: 100%;
  position:fixed;
  left: 0%;
  top:90%;
  right: 0;
  bottom: 0;
}
.movable-view{ 
  pointer-events:auto;
  height: 30px;
  width: 60px;
  background: rgba(242,143,55,0.8);
  /* background: rgba(52,152,219,0.8); */
  font-size: 30rpx;
  color: #f2f2f2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
