/**index.wxss**/
.main{
  width: 90%;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center
}

.menu{
  width: 350rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  display:flex;
  flex-direction: column;
  align-items: center;  
}

.item {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  padding: 10rpx;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color:#3498db;
  border-radius: 20rpx;
  font-size: 40rpx;
  color: #fbfbfb;
  box-shadow: 5rpx 5rpx 20rpx #2c2c2c;
}
.item image{
  width: 120rpx;
}
